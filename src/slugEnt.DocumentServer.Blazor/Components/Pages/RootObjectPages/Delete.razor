@page "/rootobjects/delete"
@inject SlugEnt.DocumentServer.Db.DocServerDbContext DB
@using SlugEnt.DocumentServer.Models.Entities
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>RootObject</h4>
    <hr />
    @if (rootobject is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@rootobject.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@rootobject.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ApplicationId</dt>
            <dd class="col-sm-10">@rootobject.ApplicationId</dd>
        </dl>
        <EditForm method="post" Model="rootobject" OnValidSubmit="DeleteRootObject" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(rootobject is null)">Delete</button> |
            <a href="/rootobjects">Back to List</a>
        </EditForm>
    }
</div>

@code {
    RootObject? rootobject;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        rootobject = await DB.RootObjects.FirstOrDefaultAsync(m => m.Id == Id);

        if (rootobject is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteRootObject()
    {
        DB.RootObjects.Remove(rootobject!);
        await DB.SaveChangesAsync();
        NavigationManager.NavigateTo("/rootobjects");
    }
}
